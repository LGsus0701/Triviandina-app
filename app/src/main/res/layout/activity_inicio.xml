<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.inicio.InicioActivity">

    <!-- LOGO DE LA APP -->
    <!-- TÍTULO DE LA APP -->
    <TextView
        android:id="@+id/main_txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TriviAndina"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LOGO DE LA APP -->
    <ImageView
        android:id="@+id/main_imv_logo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/main_txt_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Logo de TriviAndina"
        android:src="@drawable/trivia" />

    <!-- NOMBRE DEL JUGADOR -->
    <EditText
        android:id="@+id/main_edt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:padding="12dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="30dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/main_imv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN JUGAR -->
    <Button
        android:id="@+id/main_btn_jugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡A Jugar!"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/main_edt_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>